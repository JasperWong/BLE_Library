<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context="com.jasperwong.ble.activity.TestActivity">

    <com.jasperwong.ble.activity.WaverView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@color/background_material_dark"
        android:id="@+id/WaveView"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PShow_TV"
        android:text="P:0"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignTop="@id/WaveView"
        android:layout_toRightOf="@id/WaveView"
        android:layout_below="@id/FrontShowView"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PSeekBarView"
        android:layout_below="@id/PShow_TV"
        android:layout_toRightOf="@+id/WaveView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FrontShowView"
        android:text="前:0"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_below="@+id/WaveView"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LeftShowView"
        android:text="左:0"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/FrontShowView"
        android:textColor="@color/black"
        android:layout_alignTop="@id/FrontShowView"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RightShowView"
        android:text="右:0"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/FrontShowView"
        android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IShow_TV"
            android:text="I:0"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/LeftShowView"
            android:layout_alignTop="@id/PShow_TV"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DShow_TV"
            android:text="D:0"
            android:layout_below="@id/IShow_TV"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_alignLeft="@id/RightShowView"
            android:layout_alignTop="@id/PShow_TV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/IShow_View"
            android:text="0"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/WaveView"
        android:layout_marginTop="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:text="P:"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"/>
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:id="@+id/RecShow"
        android:layout_above="@+id/send_layout"
        android:layout_marginBottom="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_height="150dp"
        android:visibility="gone"
        android:text="rec"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_layout"
        android:layout_alignParentBottom="true"
        android:textSize="20dp">
        <EditText
            android:id="@+id/edit_send_view"
            android:layout_height="wrap_content"
            android:layout_width="260dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:id="@+id/btn_send_view"
            android:layout_toRightOf="@id/edit_send_view"/>
    </RelativeLayout>




</RelativeLayout>
